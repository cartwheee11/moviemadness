{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "removeComments": true,
    "target": "ES2022",
    "strict": true,
    "noEmit": true,

    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",

    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowJs": true,
    "skipLibCheck": true,

    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["./tests/**/*.ts"],
  "exclude": ["./node_modules/**/*"]
}
